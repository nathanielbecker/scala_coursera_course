package week_1

object session5 {
def product (f: Int =>Int) (a: Int, b: Int): Int = {
	if (a >b) 1
	else  f(a) * product(f)(a+1,b)
}                                                 //> product: (f: Int => Int)(a: Int, b: Int)Int
product(x =>x) (1,6)                              //> res0: Int = 720


def fact(n: Int): Int = {
product(x =>x) (1,n)

}                                                 //> fact: (n: Int)Int

fact(7)
}