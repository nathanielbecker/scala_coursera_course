package week_1

object session5 {
def product (f: Int =>Int) (a: Int, b: Int): Int = {
	if (a >b) 1
	else  f(a) * product(f)(a+1,b)
}
product(x =>x) (1,6)


def fact(n: Int): Int = {
product(x =>x) (1,n)

}

def shazam (f: Int =>Int, g: (Int, Int) => Int, identify: Int) (a: Int, b: Int): Int = {
	if (a >b) identify
	else  g(f(a) , shazam(f, g)(a+1,b))
}



}